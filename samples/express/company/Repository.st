Object subclass: #Repository	instanceVariableNames: 'items maxid'	classVariableNames: ''	poolDictionaries: ''	category: 'Repository'!"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Repository class	instanceVariableNames: ''!!Repository methodsFor: 'initialization' stamp: 'ajlopez 10/30/2013 08:50'!initialize    items := NativeObject new.    maxid := 0.! !!Repository methodsFor: 'adding' stamp: 'ajlopez 10/30/2013 08:50'!add: item    maxid := maxid + 1.    item nat: 'id' put: maxid.    items nat: maxid put: item.! !!Repository methodsFor: 'retrieving' stamp: 'ajlopez 10/30/2013 08:50'!getItems    | result |    result := NativeArray new.    items ndo: [ :item | result napply: 'push' with: { item }].    ^result.! !!Repository methodsFor: 'retrieving' stamp: 'ajlopez 10/30/2013 08:50'!getById: id    ^items nat: id.! !