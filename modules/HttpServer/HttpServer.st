Object subclass: #HttpServer	instanceVariableNames: 'server'	classVariableNames: ''	poolDictionaries: ''	category: 'HttpServer'!"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!HttpServer class	instanceVariableNames: ''!!HttpServer class methodsFor: 'creation' stamp: 'ajlopez 10/27/2013 20:31'!new    | newserver http |        newserver := self basicNew.    http := Smalltalk require: 'http'.    newserver server: (http napply: 'createServer').    ^newserver.! !!HttpServer methodsFor: 'accessing' stamp: 'ajlopez 10/27/2013 20:31'!server: aServer    server := aServer.! !!HttpServer methodsFor: 'listening' stamp: 'ajlopez 10/27/2013 20:31'!do: aBlock    server napply: 'on' with: { 'request'. aBlock toFunction }.! !!HttpServer methodsFor: 'listening' stamp: 'ajlopez 10/27/2013 20:31'!listen: aPort    server napply: 'listen' with: { aPort }.! !